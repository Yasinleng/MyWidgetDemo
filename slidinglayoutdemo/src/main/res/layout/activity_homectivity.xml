<?xml version="1.0" encoding="utf-8"?>
<com.yclenga.utils.mywidgetdemo.widget.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_homectivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:menutype="right"
    app:menuWidth="250dp"
    tools:context="com.yclenga.utils.mywidgetdemo.Homectivity">

    <!--设置控件SlidingMenu的属性menutype,设置左边菜单还是右边菜单：right|left -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--左边菜单-->
        <!--<include layout="@layout/menu_layout"/>-->
        <!--中间内容-->
        <include layout="@layout/content_layout"/>
        <!--右边菜单-->
        <include layout="@layout/menu_layout"/>

    </LinearLayout>


</com.yclenga.utils.mywidgetdemo.widget.SlidingMenu>
